{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
	"AllowedHosts": "*",
	"Api": {
		// Id API Klienta (získáno od Reservanta, neměnné).
		"ClientId": "",

		// Url adresa, na které se api nachází.
		"ApiUrl": "https://api.reservanto.cz/v1/",

		// Požadovaná práva od API, se kterými se vytváří short time token.
		"RequestedRights": [ "Customer_w", "Customer_r", "Booking_w", "Event_r", "BookingService_r", "Segment_r", "Location_r", "BookingResource_r", "FreeSpace_r" ],

		// Long time token pro přístup k reservanto API, dodáno při běhu aplikace.
		"LongTimeToken": "",

		// Short time token již s konkrétními právy, dodáno při běhu aplikace, při změně práv vymazat.
		"ShortTimeToken": ""
	}
}
